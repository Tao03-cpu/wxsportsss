<!-- 设置 -->
<view class="container">
<!-- 页面：设置（settings）；分组包含通用、提醒设置等 -->
<view class="settings-group">
    <view class="group-title">账户与安全</view>
    <view class="setting-item" bindtap="goToChangePassword">
      <text>修改密码</text>
      <text class="arrow">></text>
    </view>
    <view class="setting-item" bindtap="goToPrivacy">
      <text>隐私设置</text>
      <text class="arrow">></text>
    </view>
  </view>

  <view class="settings-group">
    <view class="group-title">通用</view>
    <view class="setting-item" bindtap="goEditProfile">
      <text>修改资料</text>
      <text class="arrow">></text>
    </view>
    <view class="setting-item" bindtap="goGoalSettings">
      <text>目标设置</text>
      <text class="arrow">></text>
    </view>
    <view class="setting-item" bindtap="goHealthDashboard">
      <text>健康档案</text>
      <text class="arrow">></text>
    </view>
    
    <view class="setting-item" bindtap="clearCache">
      <text>清除缓存</text>
      <text class="item-value">{{cacheSize}}</text>
      <text class="arrow">></text>
    </view>
    
    <view class="setting-item">
      <text>版本信息</text>
      <text class="item-value">v1.2.0</text>
    </view>
    
    <view class="setting-item" bindtap="goToAbout">
      <text>关于我们</text>
      <text class="arrow">></text>
    </view>
  </view>

  <view class="settings-group">
    <view class="group-title">打卡提醒</view>
    <view class="setting-item">
      <text>开启提醒</text>
      <switch checked="{{remindersOn}}" bindchange="onReminderChange" color="#1ABC9C" />
    </view>
    <view class="setting-item">
      <text>提醒时间</text>
      <picker mode="time" value="{{reminderTime}}" bindchange="onReminderTimeChange">
        <text class="item-value">{{reminderTime}}</text>
      </picker>
      <text class="arrow">></text>
    </view>
    <view class="setting-item" bindtap="subscribeNotify">
      <text>订阅消息授权</text>
      <text class="arrow">></text>
    </view>
  </view>
  
  
  
  <button class="logout-btn" bindtap="onLogout">退出登录</button>
</view>
