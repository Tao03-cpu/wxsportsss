
<view class="home-container">
  
  <!-- 轮播图区域 -->
  <!-- swiper:轮播图组件 indicator-dots：图下圆点 autoplay：自动播放
  interval：间隔时间（毫秒）duration：切换时长（毫秒）-->
  <swiper class="banner-swiper" indicator-dots="{{true}}" autoplay="{{true}}" interval="{{3000}}" duration="{{500}}">
    <swiper-item wx:for="{{bannerList}}" wx:key="id">
      <image class="banner-image" src="{{item.imageUrl}}" mode="aspectFill"></image>
    </swiper-item>
  </swiper>

  <!-- 欢迎语区域 -->
  <view class="welcome-section">
    <view class="welcome-title">欢迎使用燃动部落</view>
    <view class="welcome-subtitle">开启健康生活，从坚持运动开始</view>
  </view>

  <!-- 推荐运动区域 -->
  <view class="recommend-section">
    <view class="section-header">
      <view class="section-title">推荐运动</view>
      <view class="section-subtitle">科学锻炼，正确姿势很重要</view>
    </view>

    <!-- 运动项目列表 -->
    <!-- scroll-view：用于滚动区域 scroll-x横向滚动 -->
    <scroll-view class="sport-list" scroll-x="{{true}}">
      <view class="sport-item" wx:for="{{sportList}}" wx:key="id" bindtap="navigateToSportDetail" data-sport="{{item}}">
        <image class="sport-image" src="{{item.imageUrl}}" mode="aspectFill"></image>
        <view class="sport-info">
          <view class="sport-name">{{item.name}}</view>
          <view class="sport-desc">{{item.description}}</view>
          <view class="sport-tips">{{item.tips}}</view>
        </view>
      </view>
    </scroll-view>
  </view>

  <!-- 正确做法展示 -->
  <view class="technique-section">
    <view class="section-header">
      <view class="section-title">正确做法</view>
      <view class="section-subtitle">避免受伤，提升效果</view>
    </view>

    <view class="technique-list">
      <view class="technique-item" wx:for="{{techniqueList}}" wx:key="id">
        <view class="technique-header">
          <image class="technique-icon" src="{{item.iconUrl}}"></image>
          <view class="technique-title">{{item.title}}</view>
        </view>
        <view class="technique-content">
          <text class="technique-text">{{item.content}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
